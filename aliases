# Unix
alias ll="ls -l"
alias la="ls -a"
alias lll="la -l"
alias md='mkdir -p'
alias rd='rmdir'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias psg='ps aux | grep'
alias h='history'
alias vi='vim'
alias e='vim'
alias e="$EDITOR"
alias v="$VISUAL"

# Tmux
alias tml='tmux ls'
alias tmn='tmux new -s'
alias tma='tmux attach -t'

# Git
alias gap='git add -p'
alias ga='git add'
alias gnap='git add -N . && git add -p'
alias gb='git branch'
alias gc='git commit -v'
alias gco='git checkout'
alias gca='git commit -a -v'
alias gd='git diff --color-words'
alias gdc='git diff --cached'
alias gdh='git diff HEAD'
alias gl='git pull'
alias glod='git log --graph --pretty="%Cgreen%h%Creset%Cblue%d%Creset %Cred%an%Creset: %s"'
alias gp='git push'
alias gpr='git pull --rebase'
alias gst='git status'
alias gr='git rebase'
alias grc='git rebase --continue'
alias gri='git rebase --interactive'
alias gra='git rebase --abort'
alias gcp='git cherry-pick'
alias reset-authors='git commit --amend --reset-author -C HEAD'
alias wip="gc -m 'WIP'"
alias grebase="git fetch origin master && git rebase origin/master"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# JavaScript
alias nom='rm -rf node_modules && npm cache clear && npm install'
alias bom='rm -rf bower_components && bower cache clean && bower install'
alias es='ember server'
alias et='ember test'
alias ets='ember test --server'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Standard paths
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias shots="cd ~/Screenshots"

# Code paths
export CODE_PATH="$HOME/code"
export SYS_CODE_PATH="$CODE_PATH/sys"
alias dotfiles="cd $CODE_PATH/sys/dotfiles; vim ."
alias oss="cd $CODE_PATH/oss && ll"
alias apps="cd $CODE_PATH/apps && ll"
alias work="cd $CODE_PATH/Travis && ll"
alias cron="cd $SYS_CODE_PATH/cron && ll"
alias aliases="cat ~/.aliases"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
