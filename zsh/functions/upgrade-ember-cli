# upgrade ember-cli to version passed
function upgrade-ember-cli() {
  echo "Removing current version of Ember-CLI"
  npm uninstall -g ember-cli
  npm cache clean
  bower cache clean
  echo "Installing Ember-CLI $1..."
  npm install -g "ember-cli@$1"
  local-upgrade-ember-cli($1)
}

function local-upgrade-ember-cli() {
  rm -rf node_modules bower_components dist tmp
  npm install "ember-cli@$1" --save-dev
  echo "Installing packages..."
  npm install
  bower install
  ember init
}
